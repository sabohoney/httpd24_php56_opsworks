LogFormat "%v:%p %{X-Forwarded-For}i %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\"" combined

<VirtualHost *:<%= @params[:server_port] || node['apache']['listen_ports'].first %>>
  ServerName <%= @params[:server_name] %>
  <% if @params[:server_aliases] && !@params[:server_aliases].empty? -%>
  ServerAlias <% @params[:server_aliases].each do |a| %><%= "#{a}" %> <% end %>
  <% end -%>
  DocumentRoot <%= @params[:docroot] %>

  <Directory <%= @params[:docroot] %>>
    Options <%= [@params[:directory_options] || "FollowSymLinks" ].flatten.join " " %>
    AllowOverride <%= [@params[:allow_override] || "None" ].flatten.join " " %>
  <% if node['apache']['version'] == '2.4' %>
    <% if !@params[:variables][:require_ip].empty? %>
    <% @params[:variables][:require_ip].each do |ip| %>
    Require ip <%= ip %>
    <% end %>
    <% else %>
    Require all denied
    <% end %>
  <% else %>
    <% if !@params[:variables][:require_ip].empty? %>
    Order deny,allow
    <% @params[:variables][:require_ip].each do |ip| %>
    Allow from <%= ip %>
    <% end %>
    <% else %>
    Order allow,deny
    Deny from all
    <% end %>
  <% end %>
  </Directory>

  <Directory ~ "\.svn">
  <% if node['apache']['version'] == '2.4' -%>
    Require all denied
  <% else -%>
    Order allow,deny
    Deny from all
  <% end -%>
  </Directory>

  <Directory ~ "\.git">
  <% if node['apache']['version'] == '2.4' -%>
    Require all denied
  <% else -%>
    Order allow,deny
    Deny from all
  <% end -%>
  </Directory>

  LogLevel <%= node[:apache][:log_level] %>
  ErrorLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-error.log
  CustomLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-access.log combined
  CustomLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-ganglia.log ganglia

  FileETag none

  RewriteEngine On
  <% if node[:apache][:version] == '2.2' -%>
  Include <%= @params[:rewrite_config] %>*
  RewriteLog <%= node[:apache][:log_dir] %>/<%= @application_name %>-rewrite.log
  RewriteLogLevel 0
  <% else -%>
  IncludeOptional <%= @params[:rewrite_config] %>*
  <% end -%>

  SetEnvIf X-Forwarded-Proto https HTTPS=on
  <% @environment.each do |key, value| %>
  SetEnv "<%= key %>" "<%= value %>"
  <% end %>

  <% if @params[:mounted_at] -%>
  AliasMatch ^<%= @params[:mounted_at] %>/(.*)$ <%= @params[:docroot] %>$1
  <% end -%>

  <% if node[:apache][:version] == '2.2' -%>
  Include <%= @params[:local_config] %>*
  <% else -%>
  IncludeOptional <%= @params[:local_config] %>*
  <% end -%>
</VirtualHost>
